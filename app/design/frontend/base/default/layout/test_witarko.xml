<?xml version="1.0" encoding="UTF-8"?>

<layout version="0.0.1">

    <test_witarko_index_index>
        <!-- Set title -->
        <reference name="head">
            <action method="setTitle">
                <title>Witarko</title>
            </action>
        </reference>

        <!-- Switch root template to 1 column
         -->
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>

        <reference name="content">
            <!-- Add product list to content -->
            <block type="catalog/product_list" name="product_list" template="catalog/product/list.phtml">
                
                <!-- comment this
                -->
                <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                    <block type="page/html_pager" name="product_list_toolbar_pager"/>
                </block> 

                <action method="setToolbarBlockName">
                    <name>produk_list_toolbar</name>
                </action>

                <action method="setCollection">
                    <value helper="test_witarko/getProductCollection" />
                </action>

                <!--
                 -->
                <action method="setAvailableOrders">
                    <value helper="test_witarko/getAvailableOrders" />
                </action>

                <action method="setSortBy">
                    <value>price</value>
                </action>

                <action method="setDefaultDirection">
                    <value>asc</value>
                </action>

                <action method="setColumnCount">
                    <coulumn>5</coulumn>
                </action>
            </block>
        </reference>
    </test_witarko_index_index>

</layout>
